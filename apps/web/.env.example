# DAMOCLES Environment Variables - Example
# Copy this to .env.local and fill in real values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/damocles"
# Alternative: Use Supabase (recommended)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
# Production: NEXT_PUBLIC_API_URL="https://api.damocles.no"

# Social Media Bot Service
NEXT_PUBLIC_SOCIAL_BOT_URL="http://localhost:8007"
# Production: NEXT_PUBLIC_SOCIAL_BOT_URL="https://social-bot.damocles.no"

# Authentication (NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
JWT_SECRET="another-secret-key-for-jwt-tokens"

# Vipps Authentication (Norwegian Mobile Payment)
VIPPS_CLIENT_ID="your-vipps-client-id"
VIPPS_CLIENT_SECRET="your-vipps-client-secret"

# Stripe (Test Mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# Monitoring (Sentry Error Tracking)
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org-slug"
SENTRY_PROJECT="your-sentry-project-slug"
SENTRY_AUTH_TOKEN="your-sentry-auth-token-for-source-maps"
# Get from: https://sentry.io/settings/account/api/auth-tokens/

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# Cardano Blockchain Integration
NEXT_PUBLIC_CARDANO_NETWORK="testnet"
# Options: "testnet" or "mainnet"

# Blockfrost API (for Cardano blockchain data)
NEXT_PUBLIC_BLOCKFROST_API_KEY="testnetXXXXXXXXXXXXXXXXXX"
# Get from: https://blockfrost.io/

# Cardano Contract Addresses (Testnet)
NEXT_PUBLIC_TREASURY_ADDRESS_TESTNET="addr_test1..."
NEXT_PUBLIC_SWORD_POLICY_TESTNET="policy1..."
NEXT_PUBLIC_EMERGENCY_ADDRESS_TESTNET="addr_test1..."
NEXT_PUBLIC_VESTING_POLICY_TESTNET="policy1..."

# Cardano Contract Addresses (Mainnet - DO NOT COMMIT REAL VALUES)
NEXT_PUBLIC_TREASURY_ADDRESS_MAINNET="addr1..."
NEXT_PUBLIC_SWORD_POLICY_MAINNET="policy1..."
NEXT_PUBLIC_EMERGENCY_ADDRESS_MAINNET="addr1..."
NEXT_PUBLIC_VESTING_POLICY_MAINNET="policy1..."

# Development
NODE_ENV="development"
LOG_LEVEL="debug"

# Lokalise Translation Management
LOKALISE_API_TOKEN="your-lokalise-api-token-here"
LOKALISE_PROJECT_ID="your-lokalise-project-id-here"