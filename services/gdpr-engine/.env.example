# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/damocles

# Service URLs
USER_SERVICE_URL=http://localhost:3001

# Service-to-Service Authentication
SERVICE_API_KEY=dev-service-key-12345

# GDPR Request Cooldown (in hours)
# Default: 168 hours (7 days)
# This prevents users from spamming the same creditor with multiple requests
# Recommended: 168 hours (7 days) to prevent abuse while allowing legitimate follow-ups
GDPR_REQUEST_COOLDOWN_HOURS=168

# CORS Allowed Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Server Configuration
GDPR_ENGINE_PORT=8001

# SendGrid Email Configuration
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
GDPR_FROM_EMAIL=gdpr@damocles.no
GDPR_FROM_NAME=DAMOCLES GDPR Service
