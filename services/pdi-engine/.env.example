# PDI Engine Configuration
NODE_ENV=development
PDI_SERVICE_PORT=8002
HOST=0.0.0.0

# Database
DATABASE_URL="file:../user-service/prisma/dev.db"

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# PDI Configuration
PDI_CALCULATION_VERSION=1.0.0
PDI_CACHE_TTL=3600
PDI_REGIONAL_UPDATE_INTERVAL=hourly
PDI_CRITICAL_THRESHOLD=40
PDI_DAMOCLES_AUTO_TRIGGER=true

# Rate Limiting
PDI_RATE_LIMIT_MAX=100
PDI_RATE_LIMIT_WINDOW=60

# Security
JWT_SECRET=your_jwt_secret_here

# DAMOCLES Integration
GDPR_SERVICE_URL=http://localhost:8001
USER_SERVICE_URL=http://localhost:3000
NOTIFICATION_SERVICE_URL=http://localhost:8004

# Logging
LOG_LEVEL=debug