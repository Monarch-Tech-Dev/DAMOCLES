# DAMOCLES User Service - Environment Variables
# Copy this file to .env and fill in your values

# === DATABASE ===
DATABASE_URL=postgresql://username:password@localhost:5432/damocles_db

# === JWT AUTHENTICATION ===
JWT_SECRET=your-jwt-secret-same-as-nextauth-secret
JWT_EXPIRES_IN=7d

# === SERVER ===
PORT=3001
NODE_ENV=development

# === CORS ===
FRONTEND_URL=http://localhost:3004
ALLOWED_ORIGINS=http://localhost:3004,https://damocles.no

# === EMAIL SERVICE ===
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here
EMAIL_FROM=noreply@damocles-platform.no

# === LOGGING ===
LOG_LEVEL=debug