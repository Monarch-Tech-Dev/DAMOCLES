# DAMOCLES Environment Configuration
# Copy to .env and fill with real values (NEVER commit .env)

# Application
NODE_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000
APP_NAME=DAMOCLES

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/damocles_dev
DATABASE_POOL_SIZE=10
DATABASE_SSL=false

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Authentication & Security
JWT_SECRET=generate_with_openssl_rand_base64_32
JWT_EXPIRY=24h
ENCRYPTION_KEY=generate_with_openssl_rand_hex_32
SESSION_SECRET=generate_with_openssl_rand_base64_32
BCRYPT_ROUNDS=12

# BankID Integration (Norwegian authentication)
BANKID_CLIENT_ID=your_bankid_client_id
BANKID_CLIENT_SECRET=your_bankid_client_secret
BANKID_ENVIRONMENT=test
BANKID_REDIRECT_URI=http://localhost:3000/auth/bankid/callback

# Blockchain Configuration
CARDANO_NETWORK=testnet
CARDANO_NODE_URL=https://cardano-testnet.example.com
CARDANO_SOCKET_PATH=/tmp/cardano-node.socket

# Founder Wallet (For deployment)
FOUNDER_ADDRESS=addr1qxa0qatlwqfykwslhteprxvz2thrf709w76lk62442725wynzamj4crwpt3yrc8xuyx8cadzs0vz93fdgl05806ygnmq5q8rcy
FOUNDER_SKEY_PATH=keys/founder/founder.skey
FOUNDER_VKEY_PATH=keys/founder/founder.vkey

# External Services
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@damocles.no
SENTRY_DSN=your_sentry_dsn_here

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_GDPR_AUTOMATION=true
ENABLE_SMART_CONTRACTS=true
ENABLE_AUDIT_LOG=true
ENABLE_RATE_LIMITING=true

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
DEBT_ANALYSIS_CONFIDENCE_THRESHOLD=0.85

# Service Ports
USER_SERVICE_PORT=3000
GDPR_ENGINE_PORT=8001
ANALYSIS_AI_PORT=8002
SETTLEMENT_SERVICE_PORT=8003
NOTIFICATION_SERVICE_PORT=8004
BLOCKCHAIN_SERVICE_PORT=8005

# Monitoring & Analytics
PROMETHEUS_PORT=9090
GRAFANA_PORT=3030
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# Development Only
MOCK_BANKID=true
MOCK_BLOCKCHAIN=true
BYPASS_2FA=false

# Generate your own secrets with:
# openssl rand -base64 32  (for base64 secrets)
# openssl rand -hex 32     (for hex secrets)

# Security Notes:
# 1. Never commit real values to version control
# 2. Use environment-specific configurations
# 3. Rotate secrets regularly
# 4. Use strong, unique passwords
# 5. Enable 2FA for all services